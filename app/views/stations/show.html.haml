- content_for :navbar do
  .row
    .col-2
      = link_to "Back", root_path, class: "btn btn-secondary btn-lg", data: {turbo: false}
    .col-2
      = link_to image_tag(@station.station_logo, class: "img-thumbnail", size: "50x50"), @station.homepage, target: "_blank"
    .col-7
      %h2= @station.name
    .col-1
      %audio{ controls: "controls", autoplay: "autoplay", src: @station.url }

.pt-3.mt-3.mb-3.border-top
  %h1.fw-bolder
    = turbo_frame_tag "trackinfo_station_#{@station.id}", loading: :lazy, src: station_current_tracks_path(@station, show_album_info: true), data: { controller: :trackinfo } do
      Loading Track informations...
