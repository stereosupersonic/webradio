= turbo_frame_tag "trackinfo_station_#{@station.id}" do
  .row
    .col-12.mt-3.mb-3
      - if @current_track
        %h5= "#{@current_track.title} - #{@current_track.artist}"
      - else
        = "No current track"

  - if @last_fm
    .row
      .col-3
        = image_tag @last_fm.album_image, class: "img-thumbnail" if @last_fm.album_image.present?
      .col-8
        %h5= @last_fm.album
        - if @last_fm&.wiki_short.present?
          = simple_format @last_fm.wiki_short
      .col-1
    -# DEBUG
    -# .row
    -#   .col-9
    -#     = debug last_fm.response
